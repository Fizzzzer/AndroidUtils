<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white_radius_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_download_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/str_version_upadte"
        android:textSize="@dimen/sp_16" />

    <View
        style="@style/style_line_hor_color_dd"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_dialog_download_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/str_have_new_version"
            android:textSize="@dimen/sp_14" />

        <ProgressBar
            android:id="@+id/pb_dialog_download_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/shape_progress_bg_style"
            android:visibility="gone" />
    </FrameLayout>


    <View
        android:id="@+id/tv_dialog_down_line_bottom_hor"
        style="@style/style_line_hor_color_dd" />

    <LinearLayout
        android:id="@+id/ll_dialog_download_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_download_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_cancel"
            android:textSize="@dimen/sp_15" />

        <View
            android:id="@+id/tv_dialog_down_line_bottom_ver"
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:background="@color/color_dd" />

        <TextView
            android:id="@+id/tv_dialog_download_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/str_update"
            android:textColor="@color/color_red"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>